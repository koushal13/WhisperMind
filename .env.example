# Environment variables for WhisperMind
# Copy this file to .env and customize as needed

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# File Paths
DATA_DIRECTORY=data/documents
MODELS_DIRECTORY=models
LOGS_DIRECTORY=logs

# Voice Configuration
WHISPER_MODEL=base
TTS_ENGINE=pyttsx3
TTS_RATE=200
TTS_VOLUME=0.9

# UI Configuration
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501

# Logging
LOG_LEVEL=INFO

# Optional: Set specific device for models
# DEVICE=cpu  # or cuda for GPU
# TORCH_DEVICE=cpu

# Optional: HuggingFace settings
# HF_HOME=models/huggingface
# TRANSFORMERS_CACHE=models/transformers

# Optional: ChromaDB settings
# CHROMA_PERSIST_DIRECTORY=models/chromadb
# CHROMA_COLLECTION_NAME=documents